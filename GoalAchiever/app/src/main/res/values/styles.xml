<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--<item name="android:textColorPrimary">@color/text_white</item>-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:background">@color/fbutton_color_peter_river</item>-->
        <!--<item name="android:windowBackground">@color/fbutton_color_peter_river</item>-->
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <!--<item name="android:background">@color/fbutton_color_peter_river</item>-->
        <!--<item name="android:windowBackground">@color/fbutton_color_peter_river</item>-->
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/fbutton_color_midnight_blue</item>
    </style>

    <style name="GANumberPicker">
        <item name="android:textSize">28dp</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

</resources>
