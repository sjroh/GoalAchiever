<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/giftcard_row_height"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/row_giftcard_logo"
            android:layout_width="48dp"
            android:layout_height="36dp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="@dimen/giftcard_row_margin"
            android:src="@drawable/ic_giftcard" />

        <TextView
            android:id="@+id/text_card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="@dimen/giftcard_row_margin"
            android:text="CARD_NAME"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|right"
        android:orientation="horizontal">

        <include
            layout="@layout/layout_giftcard_pieces"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="@dimen/giftcard_row_margin" />

        <TextView
            android:id="@+id/text_card_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/giftcard_row_margin"
            android:text="1/1"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <info.hoang8f.widget.FButton
            android:id="@+id/btn_cart"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/giftcard_row_margin"
            android:drawableLeft="@drawable/ic_cart"
            android:gravity="center"
            android:paddingLeft="@dimen/button_padding_horizontal"
            android:paddingRight="@dimen/button_padding_horizontal"
            android:text="Buy"
            android:textColor="@android:color/white"
            fbutton:buttonColor="@color/fbutton_color_peter_river"
            fbutton:cornerRadius="5dp"
            fbutton:shadowColor="@color/fbutton_color_belize_hole"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp" />


    </LinearLayout>

</RelativeLayout>